generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                   String          @id @default(uuid())
  title                String
  ticketIds            String[]
  venue                String
  dateTime             DateTime
  totalNumberOfTickets Int
  description          String
  photoUrls            String[]
  priceOfferings       PriceOffering[]
}

model PriceOffering {
  id      String @default(uuid())
  eventId String
  name    String
  price   Float
  event   Event  @relation(fields: [eventId], references: [id])

  @@id([id, eventId])
}

model Ticket {
  id     String @id @default(uuid())
  status Status
}

model Booking {
  id         String   @id @default(uuid())
  userId     String
  ticketIds  String[]
  amountPaid Float
}

enum Status {
  AVAILABLE
  BOOKED
}
